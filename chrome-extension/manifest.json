{
  "manifest_version": 3,
  "name": "Porch Bookmarks",
  "version": "1.0.0",
  "description": "Save bookmarks to your Porch dashboard with one click",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["*://*/api/bookmarks/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
